
{% form_theme form 'form/fields.html.twig' %}

{% extends 'template-form-validation.html.twig' %}

{% set content_title = 'page.title.buildings.create'|trans %}
{% set content_description = 'page.description.buildings.create'|trans %}

{% block page_title %}{{ content_title }}{% endblock %}

{% block top_page_level_plugins %}
    {{ parent() }}
    <link href="{{ asset('metronic/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page_base_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN VALIDATION STATES-->
            <div class="portlet light portlet-fit portlet-form bordered">
                <div class="portlet-title">
                    <div class="caption">
                        {# <i class="icon-bubble font-green"></i> #}
                        <span class="caption-subject font-green bold uppercase">{{ 'page.title.buildings.create'|trans }}</span>
                    </div>
                    {# <div class="actions">
                        <div class="btn-group">
                            <a class="btn green btn-outline btn-circle btn-sm" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true"> Actions
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="javascript:;"> Option 1</a>
                                </li>
                                <li class="divider"> </li>
                                <li>
                                    <a href="javascript:;">Option 2</a>
                                </li>
                                <li>
                                    <a href="javascript:;">Option 3</a>
                                </li>
                                <li>
                                    <a href="javascript:;">Option 4</a>
                                </li>
                            </ul>
                        </div>
                    </div> #}
                </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->

                    {{ form_start(form, {'attr': {'id': 'form_sample_2', 'class': 'form-horizontal'}}) }}
                        <div class="form-body">

                            {{ form_errors(form) }}

                            {{ form_row(form.name) }}

                            <div class="form-group margin-top-20">
                                {{ form_label(form.date) }}
                                <div class="col-md-4">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        {{ form_widget(form.date, {'attr': {'class': 'form-control form-control-inline date-picker'}}) }}
                                        {{ form_errors(form.date) }}
                                    </div>
                                </div>
                            </div>

                            {{ form_row(form.architect) }}

                            <div class="form-group margin-top-20">
                                {{ form_label(form.comments) }}
                                <div class="col-md-9">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        {{ form_widget(form.comments, {'attr': {'class': 'form-control', 'rows': 10}}) }}
                                        {{ form_errors(form.comments) }}
                                    </div>
                                </div>
                            </div>

                            {{ form_row(form.imageFile) }}

                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="submit" class="btn green">{{ 'action.create_building'|trans }}</button>
                                        <a href="{{ path('building_index') }}" class="btn default">{{ 'action.cancel'|trans }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}

                    <!-- END FORM-->
                </div>
            </div>
            <!-- END VALIDATION STATES-->
        </div>
    </div>
{% endblock %}

{% block bottom_page_level_plugins %}
    {{ parent() }}
    <script src="{{ asset('metronic/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js') }}" type="text/javascript"></script>
{% endblock %}